<!-- Modal of adding blogs -->
<div class="modal fade" id="addblogs" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">ბლოგების დამატება</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/blog" method="post" enctype="multipart/form-data">
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">ფოტო</span>
            <input type="file" class="form-control" name="blogimgs" required aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" multiple>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">დასათაურება</span>
            <input type="text" class="form-control" name="bloghead" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">ფილტრისათვის</span>
            <input type="text" class="form-control"  name="blogfilter" required aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">ტექსტი</span>
            <textarea type="text" class="form-control" name="blogtxt" rows="5" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required></textarea>
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">დამატება</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
